{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:9080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "android-webview",
      "request": "attach",
      "name": "Attach to Android WebView",
      "application": "com.android.chrome",
      "webRoot": "${workspaceFolder}"
    }
  ]
}